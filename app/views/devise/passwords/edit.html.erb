  <div class="bg-gray-900 h-screen m-auto py-8 px-8 ">
  <div>
    <h2 class="text-base font-semibold leading-7 text-indigo-500">Change password</h2>
    <p class="mt-1 text-sm leading-6 text-gray-400">Update your password associated with your account.</p>
  </div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}, class: "md:col-span-2") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:max-w-xl sm:grid-cols-6">
    <div class="col-span-full">
      <%= f.label :current_password, "Current password", class: "block text-sm font-medium leading-6 text-indigo-500" %>
      <div class="mt-2">
        <%= f.password_field :current_password, autocomplete: "current-password", class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-indigo-500 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
      </div>
    </div>

    <div class="col-span-full">
      <%= f.label :password, "New password", class: "block text-sm font-medium leading-6 text-indigo-500" %>
      <div class="mt-2">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-indigo-500 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
      </div>
    </div>

    <div class="col-span-full">
      <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium leading-6 text-indigo-500" %>
      <div class="mt-2">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-indigo-500 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
      </div>
    </div>
    </div>

  <div class="mt-8 flex">
    <%= f.submit "Save", class: "rounded-md bg-indigo-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
