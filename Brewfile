# Install non-ruby dependencies required by Online Portfolio Pro

# Redis - For ActionCable support (and Sidekiq, caching, etc)
brew "redis"

# PostgreSQL - brew install postgresql
brew "postgresql"

# Overmind (requires tmux)
brew "tmux"
brew "overmind"

# Make your git life way easier
tap "jesseduffield/lazygit/lazygit"
brew "lazygit"

# Imagemagick or libvips - for processing images (avatars, file uploads, etc)
brew "vips"

# Stripe CLI - for Stripe payments and webhooks in development
tap "stripe/stripe-cli"
brew "stripe/stripe-cli/stripe"
